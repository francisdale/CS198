<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.dale.cs198">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <uses-feature android:name="android.hardware.camera2" />
    <uses-feature android:name="android.hardware.camera2.autofocus" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:replace="android:label,android:theme">
        <activity android:name=".CardHome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FaceDetect"
            android:label="@string/title_activity_face_detect" />
        <activity
            android:name=".AddClass"
            android:label="Add New Class"
            android:parentActivityName=".CardHome"
            android:windowSoftInputMode="stateVisible|adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CardHome" />
        </activity>
        <activity
            android:name=".ClassList"
            android:label="List of Students"
            android:parentActivityName=".CardHome">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CardHome" />
        </activity>

        <activity
            android:name=".CustomCamera"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".EditClassList"
            android:label="Edit Class List">
        </activity>

        <activity
            android:name=".TrainActivity"
            android:label="Train Face Crops">
        </activity>

        <activity android:name=".MainActivity" />
    </application>

</manifest>
